{
  "name": "igfotobilderverbreiter",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Richard Galfi",
  "license": "ISC",
  "dependencies": {
    "@azure/msal-node": "^2.7.0",
    "express": "^4.19.2",
    "jquery": "^3.7.1"
  },
  "devDependencies": {
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "wgn.electrons.igfotobilderverbreiter",
    "productName": "IG Foto Verteiler",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "AuthProvider.js",
      "renderer.js",
      "node_modules/**/*",
      "static/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "icon": "assets/icon.ico",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
